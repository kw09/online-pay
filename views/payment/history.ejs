<%- include('../templates/navbar'); %>
<div class="d-flex align-content-center flex-wrap">
  <div class="card w-50 mx-auto my-5">
      <h5 class="card-header">Details</h5>
      <div class="card-body">
        <h5 class="card-title"><%= user_data.first_name %> <%= user_data.last_name %></h5>
        <p class="card-text">You have Rs.<%= user_data.current_balance %> in your Account</p>
        <!-- <a href="#" class="btn btn-primary">Go somewhere</a> -->
      </div>
  </div>
</div>
<div class="container">
  <% if (transaction_history.length != 0) { %>
    <table class="table table-hover text-center">
      <thead>
        <tr class="thead-dark">
          <th scope="col">#</th>
          <th scope="col">Account Number</th>
          <th scope="col">Name</th>
          <th scope="col">Amount</th>
          <th scope="col">Date</th>
          <th scope="col">Via</th>
        </tr>
      </thead>
        <tbody>
      <% for( let i = 0; i < transaction_history.length; i++ ) { %>
          <tr class="no-border">
            <th scope="row"><%= i+1 %> </th>
            <td><%= transaction_history[i]['reciever_acc_number']; %> </td>
            <td><%= transaction_history[i]['reciever_name']; %></td>
            <td><%= transaction_history[i]['Amount']; %></td>
            <td><%= transaction_history[i]['on']; %></td>
            <td><%= transaction_history[i]['via']; %></td>
          </tr>
      <% } %>
        </tbody>
  </table>
  <% }else{ %>
    <div class="text-center">
      <p class="h1">No transactions done yet</p>
      <a href="/payment/makeTransaction">
        <button class="btn btn-outline-primary">
          Make Transaction
        </button>
    </div>
    </a>
  <% } %> 
</div>
<%- include('../templates/footer'); %> 